<div style="text-align:center;">
<h1 style=" font-size: 40px;">Ingredient Search Results</h1>

<% if @ingredients.count == 0 %>
    <%= image_tag("noresults.gif", :alt => "rss feed") %>
    <p><%= "Sorry there are no ingredients by that name." %></p>
    <p><%= form_tag ing_results_path, method: :get do %>
        <%= label_tag "Ingredient Name:" %>
        <%= text_field_tag :answer %>
        <%= submit_tag "Search Again" %>
    <% end %></p>
<% else %>
    Please Select the Ingredient You'd Like to Add
    <ul>
    <% @ingredients.each do |ing| %>
        <p><%= image_tag(ing.image, :alt => ing.name) %>
        <%= link_to ing.name, ingredient_path(ing) %></p>
    <% end %>
    </ul>
<% end %>
</div>